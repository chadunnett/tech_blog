<section class="card">
  <a href="/dashboard/{{id}}">
    <header>{{name}}</header>
    <div>
        <label for="title">title:</label>
        <input class="form-input" type="text" id="post" />
      </div>
      <div class="form-group">
        <label for="postBody">body:</label>
        <input class="form-input" type="text" id="postBody" />
      </div>
    {{#each post}}
    <h2>{{title}}</h2>
    <h3>{{body}}</h3>
    {{/each}}
  </a>
</section>